{
  "tests": [
    {
      "name": "Login with admin credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "login": "admin",
        "password": "admin123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "status": "admin"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "login": "invalid",
        "password": "wrong"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    }
  ]
}
